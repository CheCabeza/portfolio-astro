---
import { ViewTransitions } from 'astro:transitions';
import Footer from "../components/Footer";
import Nav from "../components/Nav";
import ThemeIcon from './../components/ThemeIcon.astro';

const { title } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Digital Artist services, accessible for everyone."
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
    <ViewTransitions/>
  </head>
  <body class="mx-8 md:mx-16 lg:mx-32">
    <Nav client:load transition:persist>
      <ThemeIcon slot="themeIcon"/>
    </Nav>  
    <div transition:animate="none">
      <slot />
    </div>
    <Footer client:load transition:persist/>
  </body>
</html>

<style>
  @font-face {
    font-family: melody-light;
    src: url('../../BLMelodyMono-Light.otf');
  }
  body {
    font-family: melody-light;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  html[data-theme="dark"] {
    background-color: #000000;
    color: #fff;
  }
</style>